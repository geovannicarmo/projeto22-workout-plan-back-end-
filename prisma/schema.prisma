generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model personalTrainers {

  id          Int    @id @default(autoincrement())
  email       String @unique
  password    String 
  name        String
  photo       String
}


model  GymGoers {

  id          Int    @id @default(autoincrement())
  email       String @unique
  password    String 
  name        String
  photo       String

  Exercises Exercises[]
}

model  Exercises {

  id          Int    @id @default(autoincrement())
  nRepetitions        Int
  nSeries Int
  carga       Int

  ExercisesCategoryId Int
  category     ExercisesCategory   @relation(fields: [ExercisesCategoryId], references: [id])

    GymGoersId Int
  GymGoers     GymGoers   @relation(fields: [GymGoersId], references: [id])
}


model  ExercisesCategory {

  id          Int    @id @default(autoincrement())
  label        String

  Exercises Exercises[]
}




